{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter (Debug)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "console": "debugConsole",
            "flutterMode": "debug"
        },
        {
            "name": "Flutter (Release)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "console": "debugConsole",
            "flutterMode": "release"
        },
        {
            "name": "Node.js API",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/nodejsAPI/server.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Flutter + API",
            "configurations": ["Node.js API", "Flutter (Debug)"]
        }
    ]
}
